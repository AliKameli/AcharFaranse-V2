@{
	ViewData.ModelState.TryGetValue("internalMessage", out var message);
	var internalMessage = message != null ? message.Errors.FirstOrDefault()!.ErrorMessage : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"] - آچار فرانسه</title>
	<link rel="stylesheet" href="~/css/bootstrap.css"/>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
	<link rel="stylesheet" href="~/App.EndPoints.MVCFront.styles.css" asp-append-version="true"/>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300&display=swap" rel="stylesheet">
	<style>
		body {
			direction: rtl !important;
			font-family: 'Vazirmatn', sans-serif !important;
		}
	</style>
</head>
<body >
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">آچار فرانسه</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
			        aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="Admin" asp-controller="Home">ادمین</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="Costumer" asp-controller="Home">مشتری</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-light" asp-area="Worker" asp-controller="Home" asp-action="Index">کارمند</a>
					</li>
				</ul>
				@(await Html.PartialAsync("_LoginPartial"))
			</div>
		</div>
	</nav>
</header>
<div class="container">
	<main role="main" class="pb-3">
		@if (!string.IsNullOrWhiteSpace(internalMessage))
		{
			<div class="alert d-flex justify-content-center @(internalMessage.Contains("خطا") ? "alert-danger" : "alert-success")" role="alert">
				<h4 class="alert-heading">@internalMessage</h4>
			</div>
		}
		@RenderBody()
	</main>
</div>

<footer class="border-top footer text-muted" style="bottom: 0; position: absolute; width: 100%">
	<div class="container">
		&copy; 2022 - App.EndPoints.MVCFront - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>