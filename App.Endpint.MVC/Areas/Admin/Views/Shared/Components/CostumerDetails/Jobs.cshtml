@model List<App.Domain.Dtos.JobDto>


<p>لیست کارهای مشتری</p>
<table class="table table-striped ">
    <thead>
    <tr>
        <th scope="col">نام کارمند</th>
        <th scope="col">نام آدرس</th>
        <th scope="col">وضعیت</th>
        <th scope="col">توضیحات</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var job in Model)
    {
        <tr>
            <td>@job.WorkerName</td>
            <td>@job.CostumerAddressName</td>
            <td>@job.JobStatus</td>
            <td>@job.Description</td>
            <td class="d-flex justify-content-end">
                <a class="btn btn-info" asp-controller="Job" asp-action="Details" asp-route-Id=@job.Id>
                    جزئیات
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>