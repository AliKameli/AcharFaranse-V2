@model App.Domain.Dtos.JobPictureDto

@{
	ViewData["Title"] = "آپلود عکس جدید";
}
<h3>آپلود عکس جدید</h3>
<br>

<form enctype="multipart/form-data" asp-action="Add" formmethod="post">
	<div class="form-group">
		<label asp-for="Description"></label>
		<input class="form-control" asp-for="Description">
		<br/>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">

		<label asp-for="PictureFile" class="control-label"></label>
		<input asp-for="PictureFile" class="form-control form-control-lg custom-file-input" id="customFile" type="file">
		<br/>
		<span asp-validation-for="PictureFile" class="text-danger"></span>
	</div>
	<div style="float: left; margin-top: 5px;">
		<button type="submit" class="btn btn-primary">ایجاد</button>
		<a class="btn btn-danger" asp-action="Index">انصراف</a>
	</div>

</form>

