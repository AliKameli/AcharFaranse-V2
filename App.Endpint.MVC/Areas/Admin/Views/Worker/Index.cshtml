@model List<App.Domain.Dtos.WorkerDto>
@{
    ViewData["Title"] = "لیست کارمندان";
}
<br/>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-auto">
            <h3>لیست کارمندان</h3>
        </div>
        <div class="col-md-auto">
            <div>
                <form asp-action="Index" formmethod="post">
                    <div class="row">

                        <div class="col-auto">
                            <input class="form-control" name="name" placeholder="نام مورد نظر را وارد کنید">
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">جستجو</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-auto me-auto">
            <a class="btn btn-info" asp-action="Add">
                کارمند جدید
            </a>

        </div>
    </div>
</div>

<br/>
<table class="table table-striped ">
    <thead>
    <tr>
        <th scope="col">نام</th>
        <th scope="col">نام خانوادگی</th>
        <th scope="col">ایمیل</th>
        <th scope="col">شماره ملی</th>
        <th scope="col">شماره تفن</th>
        <th scope="col">شهر محل سکونت</th>
        <th scope="col">توضیحات</th>
        <th scope="col">وضعیت تایید</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var worker in Model)
    {
        <tr>
            <td>@worker.FirstName</td>
            <td>@worker.LastName</td>
            <td>@worker.Email</td>
            <td>@worker.NationalId</td>
            <td>@worker.PhoneNumber</td>
            <td>@worker.CityName</td>
            <td>@worker.Description</td>
            <td>@(worker.IsConfirmed ? "تایید شده" : "تایید نشده")</td>
            <td class="d-flex justify-content-end">
                <a class="btn btn-success" asp-action="Details" asp-route-Id="@worker.Id">
                    جزئیات @(worker.IsConfirmed ? null : "و تایید")
                </a>
                &nbsp;|&nbsp;
                <a class="btn btn-warning" asp-action="Edit" asp-route-Id=@worker.Id>
                    ویرایش
                </a>
                &nbsp;|&nbsp;
                <a class="btn btn-danger" asp-action="Delete" asp-route-Id="@worker.Id">
                    حذف
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>