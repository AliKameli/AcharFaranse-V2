@using App.Domain.Dtos
@{
    ViewData["Title"] = "ایجاد کار جدید";
    var cities = (ViewData["Cities"] as List<CityDto>)!;
}
<h3>ایجاد کار جدید</h3>
<br>

<form asp-action="AddChooseJobCategory" formmethod="post">
    <div class="form-group">
        <label> شهر مورد نظر را انتخاب کنید</label>
        <select class="form-select" name="cityId" asp-items="@(new SelectList(cities, nameof(CityDto.Id), nameof(CityDto.Name)))">
        </select>
    </div>
    <div style="float: left; margin-top: 5px;">
        <button type="submit" class="btn btn-primary">مرحله بعد</button>
        <a class="btn btn-secondary" asp-action="Index">انصراف</a>
    </div>
</form>