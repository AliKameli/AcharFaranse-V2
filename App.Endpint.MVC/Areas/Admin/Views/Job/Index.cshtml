@model List<App.Domain.Dtos.JobDto>
@{
	ViewData["Title"] = "لیست کار‌ها";
}
<br/>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-auto">
			<h3>لیست کار‌ها</h3>
		</div>
		<div class="col-md-auto me-auto">
			<a class="btn btn-info" asp-action="AddChooseCity">
				کار جدید
			</a>
		</div>
	</div>
</div>

<br/>

<table class="table table-striped ">
	<thead>
	<tr>
		<th scope="col">دسته بندی</th>
		<th scope="col">توضیحات</th>
		<th scope="col">نام مشتری</th>
		<th scope="col">نام کارمند</th>
		<th scope="col">وضعیت</th>
		<th scope="col"></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var job in Model)
	{
		<tr>
			<th scope="row">
				@job.JobCategoryName
			</th>
			<td>@job.Description</td>
			<td>@job.CostumerName</td>
			<td>@job.WorkerName</td>
			<td>@Html.DisplayFor(x => job.JobStatus)</td>
			<td class="d-flex justify-content-end">
				<a class="btn btn-success" asp-action="Details" asp-route-Id="@job.Id">
					جزئیات
				</a>
				&nbsp;|&nbsp;
				<a class="btn btn-danger" asp-action="Edit" asp-route-Id="@job.Id">
					تغییر وضعیت؟؟!!
				</a>
				&nbsp;|&nbsp;
				<a class="btn btn-danger" asp-action="Delete" asp-route-Id="@job.Id">
					حذف
				</a>
			</td>
		</tr>
	}
	</tbody>
</table>