@using App.Domain.Dtos
@model App.Domain.Dtos.WorkerDto

@{
	
	ViewData["Title"] = "پروفایل";
	var cities = (ViewData["Cities"] as List<CityDto>)!;
}

<div class="container rounded  mt-5 mb-5">
	<div class="row">
		<div class="col-md-3 border-right">
			<div class="d-flex flex-column align-items-center text-center p-3 py-5">
				<img class="rounded-circle mt-5" width="200" src="@Model.PictureFilePath">
				<span class="font-weight-bold">@Model.FirstName @Model.LastName</span>
				<span class="text-50">@Model.Email</span>
				<a class="btn btn-warning" asp-action="EditPicture" asp-route-workerId="@Model.Id">تغییر عکس</a>
				<span> </span>
			</div>
		</div>
		<div class="col border-right">
			<form asp-action="Edit" method="post" asp-route-id="@Model.Id">
				<div class="p-3 py-5">
					<div class="d-flex justify-content-between align-items-center mb-3">
						<h4 class="text-right">مشخصات</h4>
					</div>
					<div class="row mt-2">
						<div class="col-md-6">
							<label class="labels" asp-for="FirstName"></label>
							<input class="form-control" asp-for="FirstName">
							<br/>
							<span asp-validation-for="FirstName" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="labels" asp-for="LastName"></label>
							<input class="form-control" asp-for="LastName">
							<br/>
							<span asp-validation-for="LastName" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="labels" asp-for="Email"></label>
							<input class="form-control" asp-for="Email">
							<br/>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="labels" asp-for="NationalId"></label>
							<input class="form-control" asp-for="NationalId">
							<br/>
							<span asp-validation-for="NationalId" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="labels" asp-for="PhoneNumber"></label>
							<input class="form-control" asp-for="PhoneNumber">
							<br/>
							<span asp-validation-for="PhoneNumber" class="text-danger"></span>
						</div>
						<div class="col-md-6">
							<label class="labels" asp-for="CityName"></label>
							<select class="form-select" asp-for="CityId" asp-items="@(new SelectList(cities, nameof(CityDto.Id), nameof(CityDto.Name)))">
							</select>
							<span asp-validation-for="CityId" class="text-danger"></span>
						</div>
						<div class="col-md-12">
							<label class="labels" asp-for="HomeAddress"></label>
							<input class="form-control" asp-for="HomeAddress">
							<br/>
							<span asp-validation-for="HomeAddress" class="text-danger"></span>
						</div>
					</div>
					<div class="mt-5 text-center">
						<button class="btn btn-warning" type="submit">ذخیره تغییرات</button>
						<button class="btn btn-primary" asp-action="Index">بارگزاری مجدد</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
