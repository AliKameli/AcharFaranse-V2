@model App.Domain.Dtos.CommentDto
@{
    ViewData["Title"] = "کامنت جدید";
}
<h3>اضافه کردن کامنت جدید</h3>
<br>
<form>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <br/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div style="float: left; margin-top: 5px;">
        <button type="submit" class="btn btn-primary" asp-action="AddComment" asp-route-jobId="@Model.JobId" formmethod="post">ایجاد</button>

    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}